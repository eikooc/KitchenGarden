{
  "name": "kitchenGarden",
  "description": "Gardening tool",
  "version": "0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "30",
  "icons": {
    "128": "icon_128.png",
	"16": "icon_16.png"
  },
  "app": {
    "background": {
	  "persistent": true,
      "scripts": ["js/background.js"]
    }
  },
  "bluetooth": {
    "uuids": [
      "1234",
      "5678"
    ]
  },
  "permissions": [
	"alarms",
	"storage"
  ],
  "sandbox": {
    "pages": ["main.html"]
  },
  "offline_enabled": true
}
